<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context =".CoursesActivity">


    <ImageButton
        android:id="@+id/courses_item_add_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/courses_item_sub_button"
        android:layout_toStartOf="@+id/courses_item_sub_button"
        android:background="@drawable/ic_add_black_24dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <ImageButton
        android:id="@+id/courses_item_sub_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_remove_black_24dp"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <ImageButton
        android:id="@+id/courses_item_spec_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/courses_item_quantity"
        android:layout_toStartOf="@+id/courses_item_quantity"
        android:background="@drawable/ic_star_border_black_24dp"
        android:focusable="false"
        android:onClick="showSpecPopup"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:id="@+id/courses_item_course_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/courses_item_quantity"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/courses_item_add_button"
        android:layout_toStartOf="@+id/courses_item_add_button"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textSize="30sp" />



</RelativeLayout>