<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    tools:context =".CoursesActivity" >

        <TextView
            android:id="@+id/courses_popup_title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/add_remove"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/courses_popup_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/courses_popup_title"
            android:hint="@string/add_remove" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courses_popup_edittext"
            android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/courses_popup_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="saveSpecial"
                    android:text="@string/save_button"/>

                <Button
                    android:id="@+id/courses_popup_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:onClick="closePopup"
                    android:text="@string/cancel_button" />
        </LinearLayout>
</RelativeLayout>