<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context =".CoursesActivity" >

        <TextView
            android:id="@+id/courses_popup_title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Lägg till/ta bort"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/courses_popup_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/courses_popup_title"
            android:hint="Lägg till/ta bort" />

        <Button
            android:id="@+id/courses_popup_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="closePopup"
            android:text="Spara"
            android:layout_below="@+id/courses_popup_edittext"
            android:layout_centerHorizontal="true" />
</RelativeLayout>