<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey">

    <TextView
        android:id="@+id/ingredient_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="22sp"
        android:text="@string/add_ingridient"/>

    <EditText
        android:id="@+id/popup_add_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingridient_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ingredient_popup_title"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/popup_unit_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/unit"
        android:textSize="22sp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/popup_add_ingredient"/>

    <Spinner
        android:id="@+id/popup_spinner_unit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/popup_unit_title"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dialog" />

    <EditText
        android:id="@+id/popup_add_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quantity"
        android:textSize="20sp"
        android:layout_below="@+id/popup_spinner_unit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_add_quantity"
        android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/popup_save_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/save_button"
        android:onClick="removePopupOnClick"/>

    <Button
        android:id="@+id/popup_cancel_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancel_button"
        android:onClick="removePopupOnClick"/>
    </LinearLayout>
</RelativeLayout>