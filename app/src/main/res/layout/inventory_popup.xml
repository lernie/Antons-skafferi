<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey">

    <TextView
        android:id="@+id/ingredient_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="22sp"
        android:text="LÃ¤gg till ingrediens."/>

    <EditText
        android:id="@+id/popup_add_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrediens"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ingredient_popup_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/popup_add_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enhet"
        android:layout_below="@+id/popup_add_ingredient"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/popup_add_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Antal"
        android:layout_below="@+id/popup_add_unit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="numberDecimal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_add_quantity"
        android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/popup_save_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Spara"
        android:onClick="removePopupOnClick"/>

    <Button
        android:id="@+id/popup_cancel_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Avbryt"
        android:onClick="removePopupOnClick"/>
    </LinearLayout>
</RelativeLayout>